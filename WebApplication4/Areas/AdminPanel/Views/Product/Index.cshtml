@model Product
@{
    int count = 0;
}
<div class="container">
    <h1>Products</h1>
    <a class="btn btn-primary" asp-action="Create">Create</a>




    <table class="table">
        <thead>
            <tr>
                <th scope="col">#</th>
                <th scope="col">Name</th>
                <th scope="col">Description</th>
                <th scope="col">Price</th>
            </tr>
        </thead>
        <tbody>
            @foreach (Product item in Model)
            {
                count++;
                <tr>
                    <th scope="row">@item.Id</th>
                    <td>@item.Name</td>
                    <td>@item.Description</td>
                    <td>@item.Price</td>
                </tr>

            }


        </tbody>
    </table>
</div>